<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/containerf1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/cll_eggs2"
        android:gravity="center_vertical"
        android:stretchColumns="0,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_span="4"
                android:gravity="center"
                android:text="Good Job!"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4611f4"
                android:textSize="70px"
                android:textStyle="bold" />
        </TableRow>


        <TableRow android:layout_marginTop="50px">

            <Button
                android:id="@+id/back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/cll_bg3"
                android:onClick="onClick1"
                android:text="Back to Recipe"
                android:textSize="40px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Quit"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/cll_bg3"
                android:onClick="onClick1"
                android:text="Quit"
                android:textSize="40px"
                android:textStyle="bold" />

            <TextView android:layout_column="4" />
        </TableRow>
    </TableLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/makeegg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/makeegg" />

</RelativeLayout>
